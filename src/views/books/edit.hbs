<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            {{#each errors}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{msg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/each}}
            <div class="card">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Edit Book</h3>
                </div>
                <div class="card-body">
                    <form action="/books/edit/{{book.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" value="{{book.title}}"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="Url of the book" value="{{book.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{book.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>